{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Daphne Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/daphne.exe",
            "args": [
                "-b",
                "0.0.0.0",
                "-p",
                "8001",
                "Tara.asgi:application"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "Tara.settings"
            }
        }
    ]
}
